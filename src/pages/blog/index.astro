---
import { getCollection } from "astro:content";
const posts = await getCollection("posts");

import BlogLayout from "../../layouts/BlogLayout.astro";
---

<BlogLayout title={"Jack's Thoughts"}>
	<div class="flex flex-col gap-8 pb-12">
		{
			posts.map((post) => {
				return (
					<a
						href={`blog/${post.slug}`}
						class="flex flex-col gap-2 hover:animate-pulse delay-500 font-inconsolata"
					>
						<h3
							class="font-bold text-3xl text-emerald-300"
						>
							{post.data.title}
						</h3>
						<div class="text-base leading-tight font font-roboto">
							{post.data.description}
						</div>
						<div class="text-sm font-roboto ">
							{post.data.pubDate.toLocaleDateString()}
						</div>
					</a>
				);
			})
		}
	</div>
</BlogLayout>
