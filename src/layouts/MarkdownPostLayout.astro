---
import BlogLayout from "./BlogLayout.astro";

const { frontmatter } = Astro.props;
const { title } = frontmatter;
---

<BlogLayout title={title}>
	<div class="flex flex-col">
		<h1 class="text-4xl font-bold">{frontmatter.title}</h1>
		<p class="text-stone-300 pt-4">
			{new Date(frontmatter.pubDate).toLocaleDateString()}
		</p>
		<div class="font-roboto text-stone-300 pt-8 text-lg">
			<slot />
		</div>
		<div class="pt-8">
			<hr class="pt-8 opacity-10" />
			<div class="">
				<div class="flex gap-2">
					<a
						href="https://www.linkedin.com/in/john-watters/"
						class="font-roboto text-stone-400 text-lg underline cursor-pointer"
					>
						connect on linkedin
					</a>
					<div class="text-stone-400 font-roboto text-lg font-bold">Â·</div>
					<a
						href="https://github.com/jackwatters45"
						class="font-roboto text-stone-400 text-lg underline cursor-pointer"
					>
						follow on github
					</a>
				</div>
				<div class="pt-12 pb-6">
					<a
						href="/#home"
						class="line-through-animation text-lg uppercase h-fit font-roboto-mono"
					>
						Watters
					</a>
				</div>
			</div>
		</div>
	</div>
</BlogLayout>
<style>
	h2 {
		color: var(--color-stone-300);
	}
	body {
		line-height: 1.6;
	}

	/* Markdown Elements */
	h3 {
		font-size: 2rem;
		font-weight: bold;
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	ul,
	ol {
		margin-top: 1rem;
		margin-left: 2.5rem; /* Adjust the indentation */
		list-style-type: disc; /* Sets the default list style */
	}

	li {
		margin-bottom: 0.5rem;
	}
</style>
